apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: reverse-proxy-csj
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    server: https://kubernetes.default.svc
    namespace: csj
  project: default
  source:
    path: infra/reverse-proxy-csj
    repoURL: git@github.com:pcarrascog/csj-gitops.git
    targetRevision: HEAD
    helm:
      valueFiles:
        - values.yaml
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
